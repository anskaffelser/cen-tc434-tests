			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
				<cac:TaxCategory>
					<cbc:ID>K</cbc:ID>
					<cac:TaxScheme>
						<cbc:ID>VAT</cbc:ID>
