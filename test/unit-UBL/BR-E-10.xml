<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="tc434-ubl">
	<assert>
		<scope>BR-E-10</scope>
	</assert>
	<test>
		<assert>
			<description>Verify that a VAT Breakdown (BG-23) with VAT Category code = "E"
				shall have a VAT Exemption reason code (BT-121) or the VAT Exemption reason text.</description>
			<success>BR-E-10</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cac:TaxCategory>
						<cbc:ID>E</cbc:ID>
						<cbc:TaxExemptionReason>Reverse charge</cbc:TaxExemptionReason>
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>

		</Invoice>
	</test>
	<test>
		<assert>
			<description>Verify that a VAT Breakdown (BG-23) with VAT Category code = "E"
				shall have a VAT Exemption reason code (BT-121) or the VAT Exemption reason text.</description>
			<success>BR-E-10</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cac:TaxCategory>
						<cbc:ID>E</cbc:ID>
						<cbc:TaxExemptionReasonCode>10</cbc:TaxExemptionReasonCode>
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
			
		</Invoice>
	</test>
	<test>
		<assert>
			<description>Verify that a VAT Breakdown (BG-23) with VAT Category code = "E"
				shall have a VAT Exemption reason code (BT-121) or the VAT Exemption reason text.</description>
			<success>BR-E-10</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cbc:TaxAmount>0</cbc:TaxAmount>
					<cac:TaxCategory>
						<cbc:ID>E</cbc:ID>
						<cbc:TaxExemptionReason>Reverse charge</cbc:TaxExemptionReason>
						<cbc:TaxExemptionReasonCode>10</cbc:TaxExemptionReasonCode>
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
			
		</Invoice>
	</test>

	<test>
		<assert>
			<description>Trigger error if a VAT Breakdown (BG-23) with VAT Category code = "E"
				does not have a VAT Exemption reason code (BT-121) or the VAT Exemption reason text.</description>
			<error>BR-E-10</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cbc:TaxAmount>0</cbc:TaxAmount>
					<cac:TaxCategory>
						<cbc:ID>E</cbc:ID>
					<!--	<cbc:TaxExemptionReason>Reverse charge</cbc:TaxExemptionReason>
						<cbc:TaxExemptionReasonCode>10</cbc:TaxExemptionReasonCode> -->
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
			
		</Invoice>
	</test>
</testSet>
