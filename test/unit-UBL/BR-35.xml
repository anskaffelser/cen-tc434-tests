<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="tc434-ubl">
	<assert>
		<scope>BR-35</scope>
		<scope>BR-40</scope>
	</assert>
	<test>
		<assert>
			<description>Verify that an allowance charge reason is present</description>
			<success>BR-35</success>
			<success>BR-40</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:AllowanceCharge>
				<cbc:AllowanceChargeReason>Freight</cbc:AllowanceChargeReason>
			</cac:AllowanceCharge>
		</Invoice>
	</test>


	<test>
		<assert>
			<description>Trigger error when allowance charge reason is missing</description>
			<error>BR-35</error>
			<error>BR-40</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			
			<cac:AllowanceCharge>
				<!-- <cbc:AllowanceChargeReason>Freight</cbc:AllowanceChargeReason> -->
			</cac:AllowanceCharge>

		</Invoice>
	</test>
	

</testSet>
