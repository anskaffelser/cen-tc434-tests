<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="tc434-ubl">
	<assert>
		<scope>BR-CO-01</scope>
	</assert>
	<test>
		<assert>
			<description>Verify that only one language code exists in an invoice</description>
			<success>BR-CO-01</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:AccountingSupplierParty>
				<cac:Party>
					<cac:Language>
						<cbc:LocaleCode>no</cbc:LocaleCode>
					</cac:Language>
				</cac:Party>
			</cac:AccountingSupplierParty>
		</Invoice>
	</test>
	
	<test>
		<assert>
			<description>Trigger error if more than one language code exists in an invoice</description>
			<error>BR-CO-01</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:AccountingSupplierParty>
				<cac:Party>
					<cac:Language>
						<cbc:LocaleCode>no</cbc:LocaleCode>
						<cbc:LocaleCode>en</cbc:LocaleCode>
					</cac:Language>
				</cac:Party>
			</cac:AccountingSupplierParty>
		</Invoice>
	</test>

</testSet>
