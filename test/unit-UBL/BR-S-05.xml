<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="tc434-ubl">
	<assert>
		<scope>BR-S-05</scope>
	</assert>
	<test>
		<assert>
			<description>Verify that an Invoice with a VAT category code "S" shall have the VAT category rate (BT-112) greater (&gt;) than 0 (zero).</description>
			<success>BR-S-05</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cac:TaxCategory>
						<cbc:ID>S</cbc:ID>
						<cbc:Percent>25</cbc:Percent>
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
		</Invoice>
	</test>
	<test>
		<assert>
			<description>Trigger error when an Invoice with a VAT category code "S" have the VAT category rate (BT-112) lesser than 0 (zero).</description>
			<error>BR-S-05</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cac:TaxCategory>
						<cbc:ID>S</cbc:ID>
						<cbc:Percent>-1</cbc:Percent>
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
			
		</Invoice>
	</test>
	<test>
		<assert>
			<description>Trigger error when an Invoice with a VAT category code "S" have the VAT category rate (BT-112) equal to 0 (zero).</description>
			<error>BR-S-05</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:TaxTotal>
				<cac:TaxSubtotal>
					<cac:TaxCategory>
						<cbc:ID>S</cbc:ID>
						<cbc:Percent>0</cbc:Percent>
					</cac:TaxCategory>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
			
		</Invoice>
	</test>	
	
</testSet>
