				<cac:TaxSubtotal>
					<cbc:TaxAmount>0</cbc:TaxAmount>
				</cac:TaxSubtotal>
				<cac:TaxSubtotal>
					<cbc:TaxAmount>0.00</cbc:TaxAmount>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
		</Invoice>
