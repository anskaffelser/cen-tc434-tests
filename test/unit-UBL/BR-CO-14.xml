			<cac:TaxTotal>
				<cbc:TaxAmount>250</cbc:TaxAmount>
				<cac:TaxSubtotal>
					<cbc:TaxAmount>250</cbc:TaxAmount>
				</cac:TaxSubtotal>
			</cac:TaxTotal>
		</Invoice>
	</test>
	
	<test>
		<assert>
			<description>Verify that Invoice total VAT amount = Σ VAT category tax amount</description>
