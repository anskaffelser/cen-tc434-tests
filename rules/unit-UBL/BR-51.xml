<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="tc434-ubl">
	<assert>
		<scope>BR-51</scope>
	</assert>
	<test>
		<assert>
			<description>Verify that the mandate reference is present when payment means is direct debit</description>
			<success>BR-51</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:PaymentMeans>
				<cbc:PaymentMeansCode>49</cbc:PaymentMeansCode>
				<cac:PaymentMandate>
					<cbc:ID>12345677</cbc:ID>
				</cac:PaymentMandate>
			</cac:PaymentMeans>
		</Invoice>
	</test>
	<test>
		<assert>
			<description>Verify that mandate reference is not mandatory when payment means is not direct debit</description>
			<success>BR-51</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			<cac:PaymentMeans>
				<cbc:PaymentMeansCode>31</cbc:PaymentMeansCode>
			</cac:PaymentMeans>
		</Invoice>
	</test>
	<test>
		<assert>
			<description>Trigger error if payment mandate is missing when payment means is direct debit</description>
			<error>BR-51</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:PaymentMeans>
				<cbc:PaymentMeansCode>49</cbc:PaymentMeansCode>
				<!-- <cac:PaymentMandate>
					<cbc:ID>12345677</cbc:ID>
				</cac:PaymentMandate> -->
			</cac:PaymentMeans>
		</Invoice>
	</test>
	<test>
		<assert>
			<description>Trigger error if payment mandate is missing when payment means is direct debit</description>
			<error>BR-51</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">
			
			<cac:PaymentMeans>
				<cbc:PaymentMeansCode>49</cbc:PaymentMeansCode>
				 <cac:PaymentMandate>
				 	<!-- <cbc:ID>12345677</cbc:ID> -->
				</cac:PaymentMandate> 
			</cac:PaymentMeans>
		</Invoice>
	</test>
</testSet>
