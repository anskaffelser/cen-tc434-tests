<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="tc434-ubl">
	<assert>
		<scope>BR-36</scope>
		<scope>BR-41</scope>
	</assert>
	<test>
		<assert>
			<description>Verify that an allowance charge amount is zero or above</description>
			<success>BR-36</success>
			<sucess>BR-41</sucess>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:AllowanceCharge>
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
			</cac:AllowanceCharge>
		</Invoice>
	</test>

	<test>
		<assert>
			<description>Verify that an allowance charge amount is zero or above</description>
			<success>BR-36</success>
			<success>BR-41</success>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:AllowanceCharge>
				<cbc:Amount currencyID="NOK">0</cbc:Amount>
			</cac:AllowanceCharge>
		</Invoice>
	</test>


	<test>
		<assert>
			<description>Trigger error when allowance charge amount is negative</description>
			<error>BR-36</error>
			<error>BR-41</error>
		</assert>
		<Invoice
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2">

			<cac:AllowanceCharge>
				<cbc:Amount currencyID="NOK">-10</cbc:Amount>
			</cac:AllowanceCharge>

		</Invoice>
	</test>


</testSet>
